<%= form_for(@room) do |r| %>
  <p><%= r.label :"物件名" %><br><%= r.text_field :room_name %></p>
  <p><%= r.label :"賃料" %><br><%= number_to_currency(r.number_field :price) %></p>
  <p><%= r.label :"住所" %><br><%= r.text_field :adress %></p>
  <p><%= r.label :"築年数" %><br><%= r.number_field :built_years %>年</p>
  <p><%= r.label :"備考" %><br><%= r.text_area :feature %></p>
  <hr>

  <%= r.fields_for :stations do |s| %>
    <h3>路線名<%= s.index + 1 %></h3>

    <p><%= s.label :"路線名" %><br><%= s.text_field :line_to_station %></p>
    <p><%= s.label :"駅名" %><br><%= s.text_field :station_name %></p>
    <p><%= s.label :"徒歩分数" %><br><%= s.number_field :minutes_on_foot %>分</p>
  <% end %>

  <div class = "btn">
    <%= r.submit '登録する' if action_name == 'new' %>
    <%= r.submit '更新する' if action_name == 'edit' %>
  </div>
<% end %>
